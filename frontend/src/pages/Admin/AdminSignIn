import React from 'react';
import { BrowserRouter as Router, Routes, Route } from 'react-router-dom';
import Home from '../src/components/Home.jsx';
import ChooseUser from '../src/components/ChooseUser';
import AdminSignIn from '../src/components/AdminSignIn';
import StudentSignIn from '../src/components/StudentSignIn';
import TeacherSignIn from '../src/components/TeacherSignIn';

const App = () => {
  return (
    <Router>
      <Routes>
        <Route exact path="/" component={Home} />
        <Route exact path="/choose-user" component={ChooseUser} />
        <Route exact path="/admin" component={AdminSignIn} />
        <Route exact path="/student" component={StudentSignIn} />
        <Route exact path="/teacher" component={TeacherSignIn} />
      </Routes>
    </Router>
  );
};

export default App;






